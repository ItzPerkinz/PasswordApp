<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup_security_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.itzpe.passwordsecure.SetupSecurityQuestions">

    <TextView
        android:text="Your favorite food :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/answer1"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/Question1"
        android:layout_alignLeft="@+id/answer3"
        android:layout_alignStart="@+id/answer3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/answer3"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_below="@+id/Question3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/confirmButton"
        android:layout_below="@+id/answer3"
        android:layout_centerHorizontal="true"
        android:onClick="ConfirmSecurityQuestions"/>

    <CheckedTextView
        android:text="Security Questions : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="normal|bold"/>

    <TextView
        android:text="Your favorite color :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/answer1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/answer2"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/Question2"
        android:layout_alignLeft="@+id/answer3"
        android:layout_alignStart="@+id/answer3" />

    <TextView
        android:text="Your best friend's name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:layout_below="@+id/answer2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
